# Application Settings
ENVIRONMENT=development
PROJECT_NAME="FastAPI Backend"
VERSION="1.0.0"

# Reddit API Configuration
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=YourApp/1.0

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# Security Configuration
SECRET_KEY=your-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Server Configuration
BACKEND_PORT=8000

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost
VITE_API_URL=http://localhost/api

# 邮件服务配置（Gmail）
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_gmail_account@gmail.com
EMAIL_PASSWORD=your_16_char_app_password
EMAIL_FROM_EMAIL=your_gmail_account@gmail.com
EMAIL_USE_TLS=true

# Database Logging
DB_ECHO_LOG=False

# Application Logging
LOG_LEVEL=INFO
LOG_JSON=False
LOG_FILE=

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_PLUGIN_PORT=15672

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=

# === 动态 Nginx 配置（必填）===
DOMAIN_MAIN=yourdomain.com
SUBDOMAIN_PORTAINER=portainer
SUBDOMAIN_PGADMIN=pgadmin
SUBDOMAIN_REDIS=redis

# TaskIQ Configuration
TASKIQ_WORKER_CONCURRENCY=3
TASKIQ_RESULT_EX_TIME=3600

# Twitter API Configuration
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=

# PgAdmin Configuration
PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin_password
PGADMIN_CONFIG_SERVER_MODE=True
PGADMIN_CONFIG_ENHANCED_COOKIE_PROTECTION=True
PGADMIN_CONFIG_WTF_CSRF_ENABLED=True

# ==================================
# OAuth2-Proxy Settings
# ==================================
OAUTH2_PROXY_CLIENT_ID=your_github_client_id
OAUTH2_PROXY_CLIENT_SECRET=your_github_client_secret
OAUTH2_PROXY_PROVIDER=github
OAUTH2_PROXY_REVERSE_PROXY=true
OAUTH2_PROXY_COOKIE_SECRET=base64:PASTE_BASE64_32BYTE
OAUTH2_PROXY_REDIRECT_URL=https://auth.${DOMAIN_MAIN}/oauth2/callback
OAUTH2_PROXY_EMAIL_DOMAINS=*
OAUTH2_PROXY_GITHUB_USERS=
OAUTH2_PROXY_SET_XAUTHREQUEST=true
OAUTH2_PROXY_PASS_ACCESS_TOKEN=true
OAUTH2_PROXY_HTTP_ADDRESS=0.0.0.0:4180
OAUTH2_PROXY_UPSTREAMS=static://200
OAUTH2_PROXY_COOKIE_EXPIRE=12h0m0s
OAUTH2_PROXY_COOKIE_REFRESH=1h0m0s
OAUTH2_PROXY_COOKIE_HTTPONLY=true
OAUTH2_PROXY_COOKIE_CSRF_PER_REQUEST=true
OAUTH2_PROXY_COOKIE_CSRF_EXPIRE=15m
OAUTH2_PROXY_COOKIE_DOMAINS=.yourdomain.com
OAUTH2_PROXY_WHITELIST_DOMAINS=.yourdomain.com
OAUTH2_PROXY_COOKIE_SAMESITE=lax
OAUTH2_PROXY_COOKIE_SECURE=true
OAUTH2_PROXY_SKIP_AUTH_ROUTES=^/(health|nginx-health|ping)$

# LLM / RAG Configuration
CHAT_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/
CHAT_API_KEY=your-chat-api-key
CHAT_MODEL=gemini-2.5-flash-lite
CLASSIFIER_BASE_URL=http://clf_server:8080/v1
CLASSIFIER_API_KEY=sk-classifier
CLASSIFIER_MODEL=gemma-3-4b-it-q4_0.gguf
CLASSIFIER_REPO_ID=google/gemma-3-4b-it-qat-q4_0-gguf
CLASSIFIER_FILENAME=gemma-3-4b-it-q4_0.gguf
CLASSIFIER_REVISION=main
HF_TOKEN=
HF_HUB_ENABLE_HF_TRANSFER=1
EMBEDDING_MODEL=intfloat/multilingual-e5-base
RERANKER_MODEL=BAAI/bge-reranker-base
SPACY_MODEL_URL=https://github.com/explosion/spacy-models/releases/download/zh_core_web_sm-3.8.0/zh_core_web_sm-3.8.0-py3-none-any.whl
